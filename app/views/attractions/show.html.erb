<p id="notice"><%= notice %></p>
<%= form_for(:ride, url: '/ride', method: :post) do |f| %>
<%= f.hidden_field(:user_id, value: current_user.id) %>
<%= f.hidden_field(:attraction_id, value: @attraction.id) %>
<%= f.submit "Go on this ride" %>
<% end %>
<% if admin? %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
  <%= link_to 'Destroy', @attraction, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<p>
  <strong>Name:</strong>
  <%= @attraction.name %>
</p>

<p>
  <strong>Min height:</strong>
  <%= @attraction.min_height %>
</p>

<p>
  <strong>Nausea rating:</strong>
  <%= @attraction.nausea_rating %>
</p>

<p>
  <strong>Happiness rating:</strong>
  <%= @attraction.happiness_rating %>
</p>

<p>
  <strong>Tickets:</strong>
  <%= @attraction.tickets %>
</p>

<%= link_to 'Edit', edit_attraction_path(@attraction) %> |
<%= link_to 'Back', attractions_path %>
